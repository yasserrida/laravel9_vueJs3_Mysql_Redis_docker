{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      // "esnext",
      // "dom"
      "ESNext",
      "DOM",
      "ES2021"
    ],
    "types": [
      "vite/client",
      "vite-plugin-pwa/client",
      "vite-plugin-pages/client",
      "@intlify/vite-plugin-vue-i18n/client"
    ],
    "paths": {
      "/@src": ["./src"],
      "/@src/*": ["./src/*"]
    }
  },
  "include": [
    "components.d.ts",
    "components-global.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "exclude": [
    "bulma-colors.ts"
  ],
  "noImplicitAny": false,
  "allowJs": true,
}
